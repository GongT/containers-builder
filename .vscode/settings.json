{
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"bashIde.includeAllWorkspaceSymbols": true,
	"bashIde.backgroundAnalysisMaxFiles": 5000,
	// "terminal.integrated.defaultProfile.linux": "test",
	"bashIde.shfmt.languageDialect": "bash",
	"bashIde.shfmt.simplifyCode": true,
	"search.exclude": {
		"**/local-history": true,
		"**/*.bak/**": true,
		"/tests": true,
	},
	"bashIde.globPattern": "package/**/*@(.sh|.inc)",
	"bashIde.logLevel": "debug",
	"terminal.integrated.profiles.linux": {
		"test": {
			"args": [
				"test@localhost",
				"-t"
			],
			"icon": "terminal-bash",
			"path": "ssh",
			"color": "terminal.ansiGreen",
			"env": {
				"VSCODE_CWD": "${workspaceRoot}"
			}
		},
		"bash": {
			"args": [
				"--login",
				"-i"
			],
			"icon": "terminal-bash",
			"path": "bash"
		},
		"pwsh": null,
		"unshare": null,
		"JavaScript Debug Terminal": null,
	},
}
